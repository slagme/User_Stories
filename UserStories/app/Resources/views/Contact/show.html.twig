{% extends '::base.html.twig' %}

{% block title %} {{ contact.name }}{% endblock %}

{% block body %}
    <div>
    <h1>Name: {{ contact.name }}</h1>
    <p> Description: {{ contact.description }}</p>
    </div>

    <form action="{{ path ('main_address_delete', {'id': contact.id}) }}" method="POST">
        <input name="_method" type="hidden" value="DELETE">
        <input type="submit" value="Delete">
    </form>
    <div>
        <p>Addresses: </p>
        {% for address in contact.addresses %}
            <p> {{ address.city }}, {{ address.city }} {{ address.houseNumber }} {{ address.houseUnitNumber }}</p>
        {% endfor %}
    </div>


{% endblock body%}